<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- The guides or the margins which show
        where the card view is allowed to flow. -->
    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/margin_color" />

    <View
        android:id="@+id/left"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/margin_color" />

    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/margin_color" />

    <View
        android:id="@+id/right"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/margin_color" />

    <!-- Any element wrapped using FluidicLayout becomes
        free ! Go ahead and try removing the comment from
        the second fluidic layout element, and run the app. -->
    <adk.fluidic.FluidicElement
        android:id="@+id/fluidic_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

